platform :ios, '8.0'

target 'Saitama' do

    use_frameworks!

    # Pods for Saitama
    
    #3rd party library pods
    #for validating input fields according to specific rules
    pod 'SwiftValidator', :git => 'https://github.com/jpotts18/SwiftValidator.git', :branch => 'master'
    
    # REQUIRED Networking modules
    pod 'Bolts-Swift', '1.3.0'
    pod 'SwiftyJSON'
    pod 'Alamofire', '~> 4.4.0'
    
    # UI modules
    pod 'SCLAlertView' , '0.7.0'
    pod 'IQKeyboardManagerSwift' , '4.0.9'
    pod 'STZPopupView', '1.2.0'
    
end

